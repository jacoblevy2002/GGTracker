  <nav class="navbar navbar-expand navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand">
        <img src="{{#if partials.lightTheme}}/img/logo.png{{else}}/img/whiteLogo.png{{/if}}" width="120" height="120" class="d-inline-block align-top" alt="">
      </a>
      <div class="collapse navbar-expand"></div>
      <ul class="navbar-nav me-auto">
        <li class="nav-item {{#if active.home       }}active{{/if}}"><a class="nav-link" href="/home">Home</a></li>
        <li class="nav-item {{#if active.games      }}active{{/if}}"><a class="nav-link" href="/games">Games</a></li>
        <li class="nav-item {{#if active.genres     }}active{{/if}}"><a class="nav-link" href="/genres">Genres</a></li>
        {{#if partials.userContext.loggedIn}}
        <li class="nav-item {{#if active.collection }}active{{/if}}"><a class="nav-link" href="/users/games">Collection</a></li>
        {{/if}}
        {{#if partials.userContext.user.IsAdmin}}
        <li class="nav-item {{#if active.users  }}active{{/if}}"><a class="nav-link" href="/users">Users</a></li>
        {{/if}}
      </ul>
      
      <div class="theme">
        <form action="/theme" method="POST" role="form">
        <input type="hidden" name="theme" value="{{#if partials.lightTheme}}false{{else}}true{{/if}}" />
          <input class="btn btn-secondary" type="submit" value="Toggle theme"/>
        </form>
      </div>

      <div class="headerUser">
        {{#if partials.userContext.loggedIn}}
          <div id="headerUserInfoContainer">
          <div>

            <h4>Logged in as</h4>
            <h4>{{partials.userContext.user.Username}}</h4>
            <div class="linkContainer">
              <a href="/logout">Log out</a>
            </div>
          </div>
        </div>
        <a href="/user">
          <!-- TODO: Pfp implementation?? -->
          <img src="/img/nouser.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        {{else}}
        <div id="headerUserInfoContainer">
          <div>

            <h4>Not signed in</h4>
            <div class="linkContainer">
              <a href="/login">Sign in</a>
              <a href="/signup">Sign up</a>
            </div>
          </div>
        </div>
        <!-- TODO: Pfp implementation?? -->
        <img src="/img/nouser.png" width="30" height="30" class="d-inline-block align-top" alt="">
        {{/if}}


      </div>
    </div>
  </nav>
</header>
<div id="error-container">
  {{#if error}}
  <div class="alert alert-danger alert-dismissible fade show">
    <strong>Error!</strong> {{errorText}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}
  {{#if warning}}
  <!-- Warning Alert -->
  <div class="alert alert-warning alert-dismissible fade show">
    <strong>Warning!</strong> {{warningText}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}
  {{#if success}}
  <!-- Success Alert -->
  <div class="alert alert-success alert-dismissible fade show">
    <strong>Success!</strong> {{successText}}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  {{/if}}
</div>